name:                Paskell
version:             0.1.0.0
synopsis:            A Pascal compiler with llvm backend
-- description:
homepage:            https://github.com/sam46/Paskell
license:             BSD3
license-file:        LICENSE
author:              sam46
maintainer:          abdlwahdsa@gmail.com
-- copyright:
category:            Development
build-type:          Simple
extra-source-files:  ChangeLog.md, README.md
cabal-version:       >=1.10

executable Paskell
  main-is:             Main.hs
  -- other-modules:
  -- other-extensions:
  build-depends:       base,
                       parsec,
                       mtl,
                       text,
                       HUnit,
                       haskeline,
                       bytestring,
                       containers,
                       llvm-hs,
                       llvm-hs-pure,
                       process

  other-modules:       Codegen
                       ConvertIR
                       Emit
                       ExtraParsers
                       Grammar
                       Intermediate
                       KeywordParse
                       Paskell
                       TypeCheck
                       Utils
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite spec
  type: exitcode-stdio-1.0
  main-is: Test.hs
  other-modules:       Codegen
                       ConvertIR
                       Emit
                       ExtraParsers
                       Grammar
                       Intermediate
                       KeywordParse
                       Paskell
                       TypeCheck
                       Utils
  hs-source-dirs: test src
  build-depends:       base,
                       parsec,
                       mtl,
                       text,
                       HUnit,
                       haskeline,
                       bytestring,
                       containers,
                       llvm-hs,
                       llvm-hs-pure,
                       process
  default-language: Haskell2010
